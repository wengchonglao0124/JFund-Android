<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="324dp"
    android:layout_height="111dp"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/rounded_rectangle_shadow">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="320dp"
        android:layout_height="107dp"
        android:background="@drawable/rounded_rectangle_item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/id_business_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/id_business_name"
            style="@style/TextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="19dp"
            app:layout_constraintStart_toEndOf="@+id/id_business_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/id_business_address"
            android:layout_width="183dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/dm_sans"
            android:lineSpacingExtra="4sp"
            android:textColor="#898a8d"
            android:textSize="10sp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/id_business_image"
            app:layout_constraintTop_toBottomOf="@+id/id_business_name" />

        <TextView
            android:id="@+id/id_business_distance"
            android:layout_width="90dp"
            android:layout_height="15dp"
            android:fontFamily="@font/dm_sans"
            android:textStyle="normal"
            android:textSize="8sp"
            android:textColor="#fcfcfc"
            android:lineSpacingExtra="3.2sp"
            android:background="@color/black"
            android:alpha="0.7"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/id_business_image"
            app:layout_constraintEnd_toEndOf="@+id/id_business_image"
            app:layout_constraintStart_toStartOf="@+id/id_business_image" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="349dp"
    android:layout_height="70dp"
    android:background="@drawable/rounded_rectangle_shadow">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="345dp"
        android:layout_height="66dp"
        android:background="@drawable/rounded_rectangle_item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/id_activity_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="13dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/id_activity_letter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dm_sans"
            android:lineSpacingExtra="7.2sp"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/id_activity_image"
            app:layout_constraintEnd_toEndOf="@+id/id_activity_image"
            app:layout_constraintStart_toStartOf="@+id/id_activity_image"
            app:layout_constraintTop_toTopOf="@+id/id_activity_image" />

        <LinearLayout
            android:layout_width="183dp"
            android:layout_height="39dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/id_activity_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/dm_sans"
                android:lineSpacingExtra="5.6sp"
                android:textColor="#1e1e20"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/id_activity_date"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/dm_sans"
                android:lineSpacingExtra="4.8sp"
                android:textColor="#898a8d"
                android:textSize="12sp"
                android:textStyle="normal" />

        </LinearLayout>

        <TextView
            android:id="@+id/id_activity_amount"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/dm_sans"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="6.4sp"
            android:textColor="#1e1e20"
            android:textSize="16sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.example.jacaranda.MyView.RotateTextView
            android:id="@+id/id_extra_money"
            android:layout_width="57dp"
            android:layout_height="33dp"
            android:fontFamily="@font/dm_sans"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="4.8sp"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="10sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#01000000">

    <Button
        android:id="@+id/id_btn_PaymentSetting"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:fontFamily="@font/dm_sans"
        android:textStyle="normal"
        android:textSize="16sp"
        android:textColor="#000000"
        android:background="@drawable/rounded_rectangle_half"
        android:lineSpacingExtra="6.4sp"
        android:text="Payment Setting"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c4c4c4"/>

    <Button
        android:id="@+id/id_btn_RenewQRCode"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:fontFamily="@font/dm_sans"
        android:textStyle="normal"
        android:textSize="16sp"
        android:textColor="#000000"
        android:background="#ffffff"
        android:lineSpacingExtra="6.4sp"
        android:text="Renew QR Code"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c4c4c4"/>

    <Button
        android:id="@+id/id_btn_HelpAndSupport"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="#ffffff"
        android:fontFamily="@font/dm_sans"
        android:lineSpacingExtra="6.4sp"
        android:text="Help &amp; Support"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="normal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#ffffff"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.example.jacaranda.MyView.NoScrollListView
        android:id="@+id/id_listView"
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:divider="#ccfcfcfc"
        android:dividerHeight="12dp"
        android:listSelector="#ccfcfcfc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/id_btn_showAll"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:layout_marginTop="12dp"
        android:background="#00000000"
        android:fontFamily="@font/dm_sans"
        android:lineSpacingExtra="5.6sp"
        android:text="Show all"
        android:textColor="#522479"
        android:textSize="14sp"
        android:textStyle="bold"
        android:onClick="onClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_listView" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    tools:context=".Activity.ChangePassword">

    <Button
        android:id="@+id/id_btn_changePassword_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/chevron_back1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/dm_sans"
        android:lineSpacingExtra="6.4sp"
        android:text="Change password"
        android:textColor="#1e1e20"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="71dp"
        android:fontFamily="@font/dm_sans"
        android:lineSpacingExtra="5.6sp"
        android:text="Current password"
        android:textColor="#898a8d"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view13"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="100dp"
        android:background="#fcfcfc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="182dp"
        android:fontFamily="@font/dm_sans"
        android:lineSpacingExtra="5.6sp"
        android:text="New password"
        android:textColor="#898a8d"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view14"
        android:layout_width="match_parent"
        android:layout_height="204dp"
        android:layout_marginTop="211dp"
        android:background="#fcfcfc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/id_btn_changePassword_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="448dp"
        android:layout_marginEnd="19dp"
        android:background="@drawable/save_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/id_changePassword_case1"
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:layout_marginStart="18dp"
        android:background="@drawable/subtract"
        app:layout_constraintBottom_toBottomOf="@+id/id_tv_newPassword_hint1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/id_tv_newPassword_hint1" />

    <TextView
        android:id="@+id/id_tv_newPassword_hint1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="92dp"
        android:fontFamily="@font/dm_sans"
        android:lineSpacingExtra="4.8sp"
        android:text="6-20 characters"
        android:textColor="#c4c4c4"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@+id/view14"
        app:layout_constraintTop_toTopOf="@+id/view14" />


    <View
        android:id="@+id/id_changePassword_case2"
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:layout_marginStart="18dp"
        android:background="@drawable/subtract"
        app:layout_constraintBottom_toBottomOf="@+id/id_tv_newPassword_hint2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/id_tv_newPassword_hint2" />

    <TextView
        android:id="@+id/id_tv_newPassword_hint2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="114dp"
        android:fontFamily="@font/dm_sans"
        android:lineSpacingExtra="4.8sp"
        android:text="Consists numbers, uppercase &amp; lowercase letters"
        android:textColor="#c4c4c4"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view14" />

    <EditText
        android:id="@+id/id_et_changePassword1"
        android:layout_width="342dp"
        android:layout_height="54dp"
        android:layout_marginStart="18dp"
        android:background="@null"
        android:fontFamily="@font/dm_sans"
        android:hint="Current password"
        android:lineSpacingExtra="5.6sp"
        android:singleLine="true"
        android:textColor="#1e1e1e"
        android:textColorHint="#b9b9bd"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/view13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view13" />

    <Button
        android:id="@+id/id_btn_changePassword1"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/sign_in_eye"
        app:layout_constraintBottom_toBottomOf="@+id/view13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view13" />

    <EditText
        android:id="@+id/id_et_changePassword2"
        android:layout_width="342dp"
        android:layout_height="54dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="6dp"
        android:background="@null"
        android:fontFamily="@font/dm_sans"
        android:hint="new password"
        android:maxLength="20"
        android:lineSpacingExtra="5.6sp"
        android:singleLine="true"
        android:textColor="#1e1e1e"
        android:textColorHint="#b9b9bd"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view14" />

    <Button
        android:id="@+id/id_btn_changePassword2"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/sign_in_eye"
        app:layout_constraintBottom_toBottomOf="@+id/id_et_changePassword2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/id_et_changePassword2" />

    <EditText
        android:id="@+id/id_et_changePassword3"
        android:layout_width="342dp"
        android:layout_height="54dp"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="6dp"
        android:background="@null"
        android:fontFamily="@font/dm_sans"
        android:hint="Confirm new password"
        android:lineSpacingExtra="5.6sp"
        android:maxLength="20"
        android:singleLine="true"
        android:textColor="#1e1e1e"
        android:textColorHint="#b9b9bd"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/view14"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/id_btn_changePassword3"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/sign_in_eye"
        app:layout_constraintBottom_toBottomOf="@+id/id_et_changePassword3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/id_et_changePassword3" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="59dp"
    android:paddingHorizontal="8dp"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <LinearLayout
        android:id="@+id/id_ll_home"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/id_iv_home"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/bottom_navigation_home"/>
        <TextView
            android:id="@+id/id_tv_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dm_sans"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@drawable/bottom_navigation_textcolor"
            android:lineSpacingExtra="4.8sp"
            android:text="Home"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_ll_shop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/id_iv_shop"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/bottom_navigation_shop"/>
        <TextView
            android:id="@+id/id_tv_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dm_sans"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@drawable/bottom_navigation_textcolor"
            android:lineSpacingExtra="4.8sp"
            android:text="Shop"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_ll_activity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/id_iv_activity"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/bottom_navigation_activity"/>
        <TextView
            android:id="@+id/id_tv_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dm_sans"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@drawable/bottom_navigation_textcolor"
            android:lineSpacingExtra="4.8sp"
            android:text="Activity"/>
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/id_ll_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/id_iv_profile"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/bottom_navigation_profile"/>
        <TextView
            android:id="@+id/id_tv_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dm_sans"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@drawable/bottom_navigation_textcolor"
            android:lineSpacingExtra="4.8sp"
            android:text="Profile"/>
    </LinearLayout>
</LinearLayout>